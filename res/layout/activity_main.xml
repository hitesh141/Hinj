<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFF"
    android:gravity="center"
    android:id="@+id/RelativeLayoutSecure" 
    >
     <ScrollView
         android:layout_width="fill_parent"
         android:layout_height="wrap_content" >
<LinearLayout
    android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" 
    >
    <TextView
        android:id="@+id/main_userkey"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"        
        android:text="Licence key"
        android:textColor="#000"
        android:textSize="14dip" />

    <EditText
        android:id="@+id/update_reg_txt_userkey"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main_userkey"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        android:singleLine="true" 
        android:text=""
        />

    <TextView
        android:id="@+id/main_mobileno"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/update_reg_txt_userkey"
        android:text="Mobile No"
        android:textColor="#000"
        android:textSize="14dip"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        />

    <EditText
        android:id="@+id/update_reg_txt_mobileNo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main_mobileno"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        android:singleLine="true"
        android:inputType="number"
        />

    <Button
        android:id="@+id/usre_registration_btn_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/update_reg_txt_mobileNo"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:text="Submit"
        android:textColor="#000"
        android:layout_marginLeft="2dip"
        android:layout_marginRight="2dip" />
    </LinearLayout>
    </ScrollView>
     <!-- <ScrollView
         android:layout_width="fill_parent"
         android:layout_height="fill_parent" >

         <RelativeLayout
             android:layout_width="fill_parent"
             android:layout_height="fill_parent"
             android:background="#FFF"
             android:gravity="center_vertical"
             android:orientation="vertical" >
         </RelativeLayout>
     </ScrollView> -->

</RelativeLayout>
