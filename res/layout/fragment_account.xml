<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#dddddd"
        android:weightSum="2" >

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center|left"
            android:paddingLeft="10dip" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_account" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:text="Accounts"
                android:textAppearance="?android:attr/textAppearanceSmall" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:paddingBottom="10dip"
        android:paddingRight="10dip"
        android:paddingTop="15dip" >

        <ImageView
            android:id="@+id/contact_imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dip"
            android:background="@drawable/icon_user" />

        <LinearLayout
            android:layout_width="205dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:layout_weight="0.76"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/user_name_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:singleLine="true"
                android:text="Name"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/user_email_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.69"
                android:ems="10"
                android:singleLine="true"
                android:text="abc@xyz.com" />
        </LinearLayout>

        <Button
            android:id="@+id/logout_btn"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="30dip"
            android:layout_gravity="center"
            android:background="@drawable/btn_signout"
            android:gravity="center"
            android:text="Sign out" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dip"
        android:layout_marginTop="2dip"
        android:background="#e9eaec" >
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:paddingBottom="10dip"
        android:paddingRight="10dip"
        android:paddingTop="15dip" >

        <LinearLayout
            android:layout_width="205dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:layout_weight="0.76"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/hinjeddevice_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:singleLine="true"
                android:text="HinJed Devices"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#7da6e4"
                android:visibility="invisible" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/hinjeddecvice_text_seperator_LL"
        android:layout_width="match_parent"
        android:layout_height="2dip"
        android:layout_marginTop="2dip"
        android:background="#7da6e4"
        android:visibility="invisible" >
    </LinearLayout>

    <ListView
        android:id="@+id/device_list_view"
        android:layout_width="match_parent"
        android:layout_height="276dp"
        android:layout_gravity="center"
        android:layout_marginTop="5dip"
        android:layout_weight="1"
        android:divider="@null" >
    </ListView>

    <Button
        android:id="@+id/add_device_btn"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="192dp"
        android:layout_height="30dip"
        android:layout_gravity="center"
        android:layout_marginBottom="15dip"
        android:layout_marginTop="10dip"
        android:background="@drawable/btn_signout"
        android:gravity="center"
        android:text="Add Device"
        android:visibility="visible" />

</LinearLayout>